                <%= form_with(model: [:admin, batch]) do |form| %>
                  <div class="row">

                    <div class="form-group col-md-9">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: "form-control", required: true %>
                    </div>

                    <div class="form-group form-check col-md-3">
                      <br>
                      <%= form.label :status %>
                      <%= form.check_box :status, class: "form-check-input" %>
                    </div>

                    <div class="form-group">
                      <%= form.label :course_id %>
                      <%= form.select :course_id, Current.school.courses.collect{|c| [c.name, c.id]}, { include_blank: true }, class: "form-control" %>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> <%= batch.id.nil? ? "Create Batch" : "Update Batch"%></button>
                    </div>

                  </div>
                <% end %>