                <%= form_with(model: [:admin, course]) do |form| %>
                  <div class="row">

                    <div class="form-group col-md-9">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: "form-control", required: true %>
                    </div>

                    <div class="form-group form-check col-md-3">
                      <br>
                      <%= form.label :status %>
                      <%= form.check_box :status, {class: "form-check-input"} %>
                    </div>

                    <div class="form-group">
                      <%= form.label :description %>
                      <%= form.text_area :description, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%#= form.label :material %>
                      <%#= form.text_area :material, class: "form-control" %>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> <%= course.id.nil? ? "Create Course" : "Update Course"%></button>
                    </div>

                  </div>
                <% end %>