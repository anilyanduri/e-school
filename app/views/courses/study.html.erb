      <div id="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="box">
                <h3>Course</h3>
                <table class="table" id="schools">
                  <thead>
                    <tr>
                      <th scope="col">Name</th>
                      <th scope="col">Desctiption</th>
                      <th scope="col">Material</th>
                      <th scope="col">Active</th>
                      <th scope="col" colspan="3">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr id="<%= dom_id @course%>">
                      <%= render @course %>
                    </tr>
                    <% if Current.user.school_admin?(Current.school) %>
                    <tr>
                      <td colspan="4"></td>
                      <td colspan="3">
                        <%= link_to raw("<i class='fa fa-list-alt'></i> Courses"), admin_courses_path %>
                      </td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
                <h4>Course Material</h4>
                <div class="progress" style="height: 2px;">
                  <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="stydy-material" id="stydy-material">
                  <p><%= @course.material %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <% content_for :footer_js do %>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const studyMaterialContainer = document.getElementById("stydy-material");
        const actualHeight = studyMaterialContainer.scrollHeight - 310;
          studyMaterialContainer.addEventListener('scroll', function(){
            let progress = (studyMaterialContainer.scrollTop / actualHeight) * 100
            $('.progress-bar').css('width', progress+'%').attr('aria-valuenow', progress).html(progress+'%');
        });
      });
    </script>
  <% end %>
