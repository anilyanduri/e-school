                <%= form_with(model: [:admin, school]) do |form| %>
                  <div class="row">

                    <div class="form-group">
                      <%= form.label :name %>
                      <%= form.text_field :name, class: "form-control", required: true %>
                    </div>

                    <div class="form-group">
                      <%= form.label :description %>
                      <%= form.text_area :description, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= form.label :status %>
                      <%= form.select :status, SCHOOL_STATUS.to_a, { include_blank: true }, {class: "form-control"}%>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> <%= school.id.nil? ? "Create School" : "Update School"%></button>
                    </div>

                  </div>
                <% end %>
